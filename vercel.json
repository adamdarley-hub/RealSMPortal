{
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/spa",
  "devCommand": "npm run dev",
  "build": {
    "env": {
      "NODE_VERSION": "22"
    }
  },
  "rewrites": [
    { "source": "/api/config", "destination": "/api/config" },
    { "source": "/api/jobs", "destination": "/api/jobs" },
    { "source": "/api/cached-jobs", "destination": "/api/cached-jobs" },
    { "source": "/api/clients", "destination": "/api/clients" },
    { "source": "/api/invoices", "destination": "/api/invoices" },
    { "source": "/api/ping", "destination": "/api/ping" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
