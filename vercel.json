{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/spa",
  "devCommand": "npm run dev",
  "framework": null,
  "functions": {
    "netlify/functions/api.ts": {
      "runtime": "nodejs22.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "22"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/netlify/functions/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
